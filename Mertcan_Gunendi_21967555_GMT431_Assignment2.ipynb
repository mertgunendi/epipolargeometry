    "import cv2\n",
    "import numpy as np\n",
    "import scipy.io\n",
    "\n",
    "# Global variables\n",
    "points_img2 = []\n",
    "\n",
    "def draw_epipolar_lines(event, x, y, flags, param):\n",
    "    global points_img2\n",
    "    if event == cv2.EVENT_LBUTTONDOWN and len(points_img2) < 5:\n",
    "        points_img2.append((x, y))\n",
    "        cv2.circle(im2, (x, y), 5, (0, 255, 0), -1)\n",
    "        cv2.imshow(\"Image 2\", im2)\n",
    "    elif len(points_img2) == 5:\n",
    "        draw_epipolar_lines_on_img2()\n",
    "\n",
    "def draw_epipolar_lines_on_img2():\n",
    "    global points_img2\n",
    "    # Compute epipolar lines in image 2\n",
    "    points_img2_np = np.array(points_img2, dtype=np.float32).reshape(-1, 1, 2)\n",
    "    lines_img2 = cv2.computeCorrespondEpilines(points_img2_np, 2, F_matrix23)\n",
    "    lines_img2 = lines_img2.reshape(-1, 3)\n",
    "\n",
    "    # Draw epipolar lines on image 2\n",
    "    colors = np.random.randint(0, 255, (len(lines_img2), 3))\n",
    "    for (x, y), line, color in zip(points_img2, lines_img2, colors):\n",
    "        a, b, c = line\n",
    "        x0, y0 = map(int, [0, int(-c/b)])\n",
    "        x1, y1 = map(int, [im2.shape[1], int(-(c + a*im2.shape[1])/b)])\n",
    "        cv2.circle(im2, (x, y), 5, tuple(color.tolist()), -1)\n",
    "\n",
    "    # Display image 2 with epipolar lines\n",
    "    cv2.imshow(\"Image 2 with Epipolar Lines\", im2)\n",
    "\n",
    "    # Draw epipolar lines on image 3\n",
    "    im3 = cv2.imread(img3_path)\n",
    "\n",
    "    # Compute epipolar lines in image 3 using F_matrix23\n",
    "    points_img3_np = np.array(points_img2, dtype=np.float32).reshape(-1, 1, 2)\n",
    "    lines_img3 = cv2.computeCorrespondEpilines(points_img3_np, 1, F_matrix23)\n",
    "    lines_img3 = lines_img3.reshape(-1, 3)\n",
    "\n",
    "    # Draw epipolar lines on image 3\n",
    "    for (x, y), line, color in zip(points_img2, lines_img3, colors):\n",
    "        a, b, c = line\n",
    "        x0, y0 = map(int, [0, int(-c/b)])\n",
    "        x1, y1 = map(int, [im3.shape[1], int(-(c + a*im3.shape[1])/b)])\n",
    "        cv2.line(im3, (x0, y0), (x1, y1), tuple(color.tolist()), 2)\n",
    "\n",
    "    # Display image 3 with epipolar lines\n",
    "    cv2.imshow(\"Image 3 with Epipolar Lines\", im3)\n",
    "\n",
    "# Specify image paths and fundamental matrix paths\n",
    "img2_path = \"florence2.jpg\"\n",
    "img3_path = \"florence3.jpg\"\n",
    "F23 = np.array([\n",
    "    [3.03994528999160e-08, 2.65672654114295e-07, -0.000870550254997210],\n",
    "    [4.67606901933558e-08, -1.11709498607089e-07, -0.00169128012255720],\n",
    "    [-1.38310618285550e-06, 0.00140690091935593, 0.999997201170569]\n",
    "])\n",
    "F_matrix23_path = \"Fmatrix23.mat\"\n",
    "\n",
    "# Load and use the correct key for the fundamental matrix\n",
    "mat_contents = scipy.io.loadmat(F_matrix23_path)\n",
    "F_matrix23 = mat_contents[\"F23\"]\n",
    "\n",
    "# Load image 2\n",
    "im2 = cv2.imread(img2_path)\n",
    "\n",
    "# Check if the image is loaded successfully\n",
    "if im2 is None:\n",
    "    print(f\"Error: Could not load image from {img2_path}\")\n",
    "else:\n",
    "    \n",
    "    # Create a window and set the callback function\n",
    "    cv2.namedWindow(\"Image 2\")\n",
    "    cv2.setMouseCallback(\"Image 2\", draw_epipolar_lines)\n",
    "\n",
    "    # Display image 2 for manual point selection\n",
    "    cv2.imshow(\"Image 2\", im2)\n",
    "\n",
    "    # Wait until 5 points are selected\n",
    "    cv2.waitKey(0)\n",
    "    cv2.destroyAllWindows()"
